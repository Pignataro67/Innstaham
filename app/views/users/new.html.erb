<div class="centering_container">
  <div class="form_container">
    <%= form_for @user do |f| %>

      <%= f.label :name, "Name", class:"message"  %>
      <%= f.text_field :name, class: "user_input" %>
      
      <%= f.label :username, class:"message"  %>
      <%= f.text_field :username, class: "user_input" %>
      
      <%= f.label :password, class:"message"  %>
      <%= f.password_field :password, class: "user_input"  %>
      
      <%= f.submit%>
    <%end%>
  </div>
</div>