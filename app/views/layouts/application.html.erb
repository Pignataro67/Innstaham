<!DOCTYPE html>
<html>
  <head>
    <title>InstaHam</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="site_layout">
  <div class="navigation_and_logo">

  <!-- <div class="back_button, nav" >
    <%=link_to "Back", redirect_path, class: "nav"%>
  </div> -->
  <div class="index_button, nav" >
    <%= link_to "Feed", users_index_path, class: "nav"%>
  </div>
  <% if session[:user_id]%>
  <div class="search_button, nav">
    <%= link_to "Search", search_path, class: "nav"%>
  </div>
  <% end %>
  <%= link_to "INSTAHAM", users_index_path, :class =>
  "logo" %>
  <div class="discover_button, nav" >
    <%=link_to "Discover Users", discover_path, class: "nav"%>
  </div>
  <% if session[:user_id]%>
  <div class="profile_button, nav">
    <%=link_to "Profile", "/users/#{session[:user_id]}", class: "nav"%>
  </div>
  <% end %>

</div>

<%= video_tag('snow_falling.mp4', class: "myVideo", loop: true, autoplay: true) %>

    <%= yield %>
  </body>
</html>